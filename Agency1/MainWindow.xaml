    Width="1000"
    Height="550"
    Closed="agency_wnd_Closed"
    Icon="clover.ico"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="HeightColor">
            <Setter Property="Control.Background" Value="AliceBlue" />
            <Setter Property="Control.Foreground" Value="Black" />
            <Setter Property="Control.Height" Value="30" />
        </Style>
        <Style x:Key="fontSize">
            <Setter Property="Control.Height" Value="28" />
            <Setter Property="Control.FontSize" Value="18" />
        </Style>
        <Style x:Key="buttonWrap" TargetType="Button">
            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
        </Style>
        <Style x:Key="{x:Type Button}">
            <Setter Property="Control.BorderThickness" Value="2" />
            <Setter Property="Control.BorderBrush" Value="Black" />
        </Style>
        <!--<Style x:Key="{x:Type Button}">
            <Setter Property="Control.FontFamily" Value="Times new roman"></Setter>
            <Setter Property="Control.FontSize" Value="14"></Setter>
        </Style>-->
    </Window.Resources>

